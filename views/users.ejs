<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="text-center mb-3">
        <h1 class="h1">Daftar User</h1>
        <a href="/add-user" class="btn btn-primary">Add User</a>
      </div>
      <div class="col-10 py-5 px-3 border rounded">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th scope="col">Password</th>
              <th scope="col">Created At</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, index) => { %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= user.name %></td>
                <td class="text-truncate" style="max-width: 150px;"><%= user.password %></td>
                <td><%= user.createdAt.toISOString().split('T')[0] %></td>
                <td>
                  <a href="/edit-user/<%= user.id %>">Edit</a> |
                  <a href="/delete-user/<%= user.id %>">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
</body>

</html>